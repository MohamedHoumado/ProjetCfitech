{% extends 'base.html.twig' %}

{% block title %}Service{% endblock %}

{% block body %}
    <h1>Service</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ service.id }}</td>
            </tr>
            <tr>
                <th>Nom_service</th>
                <td>{{ service.nomService }}</td>
            </tr>
            <tr>
                <th>Description_service</th>
                <td>{{ service.descriptionService }}</td>
            </tr>
            <tr>
                <th>Date_creation</th>
                <td>{{ service.dateCreation ? service.dateCreation|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Effectif_max</th>
                <td>{{ service.effectifMax }}</td>
            </tr>
            <tr>
                <th>Statut_actif</th>
                <td>{{ service.statutActif ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_service_index') }}">back to list</a>

    <a href="{{ path('app_service_edit', {'id': service.id}) }}">edit</a>

    {{ include('service/_delete_form.html.twig') }}
{% endblock %}
