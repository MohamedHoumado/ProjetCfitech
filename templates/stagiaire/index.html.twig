{% extends 'base.html.twig' %}

{% block title %}Stagiaire index{% endblock %}

{% block body %}
    <h1>Stagiaire index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom_stagiaire</th>
                <th>Prenom_stagiaire</th>
                <th>Date_naissance</th>
                <th>Adresse</th>
                <th>Email</th>
                <th>Telephone</th>
                <th>Niveau_etude</th>
                <th>Numero_national_stagiaire</th>
                <th>Date_inscription</th>
                <th>formation</th>
                <th>Compte_bancaire_stagiaire</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for stagiaire in stagiaires %}
            <tr>
                <td>{{ stagiaire.id }}</td>
                <td>{{ stagiaire.nomStagiaire }}</td>
                <td>{{ stagiaire.prenomStagiaire }}</td>
                <td>{{ stagiaire.dateNaissance ? stagiaire.dateNaissance|date('Y-m-d') : '' }}</td>
                <td>{{ stagiaire.adresse }}</td>
                <td>{{ stagiaire.email }}</td>
                <td>{{ stagiaire.telephone }}</td>
                <td>{{ stagiaire.niveauEtude }}</td>
                <td>{{ stagiaire.numeroNationalStagiaire }}</td>
                <td>{{ stagiaire.dateInscription ? stagiaire.dateInscription|date('Y-m-d') : '' }}</td>
                <td>{{ stagiaire.formation.intituleFormation}}</td>
                <td>{{ stagiaire.compteBancaireStagiaire }}</td>
                <td>
                    <a href="{{ path('app_stagiaire_show', {'id': stagiaire.id}) }}">show</a>
                    <a href="{{ path('app_stagiaire_edit', {'id': stagiaire.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_stagiaire_new') }}">Create new</a>
{% endblock %}
